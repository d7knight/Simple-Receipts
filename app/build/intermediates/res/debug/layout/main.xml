<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<RelativeLayout android:id="@+id/fullreceipt"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:padding="10px" android:background="@drawable/border">
			<ImageButton android:id="@+id/logo" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_below="@+id/rno"
				android:paddingTop="30px"
				android:background="@null" android:layout_alignParentRight="true"
				android:src="@drawable/logo">
			</ImageButton>
			<ImageButton android:background="@null" android:id="@+id/sig"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_below="@+id/widge12" android:layout_alignParentRight="true"
				android:src="@drawable/sig">
			</ImageButton>
			<TextView android:id="@+id/rectext" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="RECEIVED FROM: "
				android:textColor="#ff000000" android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true" android:textSize="18sp">
			</TextView>
			<TextView android:id="@+id/desctext" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="SERVICE DESCRIPTION: Installation Services"
				android:layout_below="@+id/name" android:textColor="#ff000000"
				android:layout_alignParentLeft="true" android:textSize="18sp">
			</TextView>
			<TextView android:id="@+id/name" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Customer Name"
				android:textColor="#ff000000" android:layout_alignParentTop="true"
				android:layout_toRightOf="@+id/rectext" android:maxWidth="215dip"
				android:textSize="18sp">
			</TextView>
			<TextView android:id="@+id/rnotext" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="RECEIPT NO. "
				android:textColor="#ff000000" android:layout_alignParentTop="true"
				android:layout_toLeftOf="@+id/rno" android:textSize="18sp">
			</TextView>
			<TextView android:id="@+id/rno" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="ERR"
				android:textColor="#ff000000" android:layout_alignParentTop="true"
				android:layout_alignParentRight="true" android:textSize="18sp">
			</TextView>


			<TextView android:id="@+id/date" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="DATE:Today's Date"
				android:textColor="#ff000000" android:layout_below="@+id/desctext"
				android:textSize="18sp">
			</TextView>
			<TextView android:textSize="18sp" android:id="@+id/thesumof"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="The Sum Of:" android:textColor="#ff000000"
				android:layout_below="@+id/date"
				android:layout_alignParentLeft="true"
				>
			</TextView>
			<TextView android:id="@+id/amount" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="_________________________________________"
				android:textColor="#ff000000" android:layout_below="@+id/thesumof"
				android:layout_alignParentLeft="true" android:textSize="18sp"
				android:maxWidth="350dip">
			</TextView>
			<TextView android:id="@+id/widge12" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Draper Knight"
				android:textSize="24sp" android:textColor="#ff000000"
				android:layout_below="@+id/logo" android:layout_alignParentRight="true">
			</TextView>
			<TextView android:layout_width="wrap_content" android:textColor="#ff000000" android:textSize="18sp" android:text="ADDITIONAL COMMENTS:" android:layout_height="wrap_content" android:id="@+id/addcm" android:layout_below="@+id/amount" android:layout_alignLeft="@+id/comments"></TextView>
			<TextView android:layout_width="wrap_content" android:textColor="#ff000000" android:textSize="18sp" android:text="Comments go here, really long comments, really really really long." android:lines="1" android:layout_height="wrap_content" android:id="@+id/comments" android:maxLength="40" android:layout_below="@+id/addcm" android:layout_alignLeft="@+id/amount"></TextView>
		</RelativeLayout>

		<Button android:onClick="send" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Email"
			android:textSize="36sp">
		</Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn1"
            android:onClick="print"
            android:id="@+id/button" />

        <Button android:id="@+id/back" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Back"
			android:textSize="20sp" android:onClick="back">
		</Button>
	</LinearLayout>

</ScrollView>
